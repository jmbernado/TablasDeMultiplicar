@model List<List<Tablas>>;
@{
    int i = 1;
}

@{
    ViewData["Title"] = "Tablas de Multiplicar";
}
    
<h2>
    Tablas de multiplicar
</h2>

    <div>
        <div class="row">

            @foreach (var item in Model)
            {

            <div class="mx-auto">
                <div class="card m-1 m-sm-1 m-md-1" style="width: 12rem; text-align:center">
                    <div class="card-header bg-info p-1 p-sm-1 p-md-1">
                        <a class="text-white" asp-controller="Ejercicios" asp-action="muyfaciles" asp-route-tabla="@i">Tabla del @i</a>
                    </div>
                    <ul class="list-group">
                        @foreach (var item1 in item)
                            {
                        <li class="list-group-item bg-light p-1 p-sm-1 p-md-1" style="text-align:center">@item1.M1 X @item1.M2 = @item1.Result</li>
                            }

                    </ul>
                </div>
            </div>
                i++;
            }

        </div>
    </div>
